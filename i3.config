  bindsym Escape mode default
  bindsym Return mode default
}

set $mode_system "System [s]uspend [p]oweroff"
bindsym $mod+Delete mode $mode_system
mode $mode_system {
  bindsym s exec --no-startup-id systemctl suspend; mode default
  bindsym p mode $mode_poweroff_confirm
  bindsym Escape mode default
  bindsym Return mode default
}

set $mode_bluetooth "Bluetooth [p]ower on | power [o]ff | connect [h]eadset | disconnect [H]eadset | [M]ove to headset | [t]oggle headset profile | connect [m]ouse"
bindsym $mod+b mode $mode_bluetooth
mode $mode_bluetooth {
  bindsym p exec --no-startup-id echo -e 'power on\nquit' | bluetoothctl; mode default
  bindsym o exec --no-startup-id echo -e 'power off\nquit' | bluetoothctl; mode default
  #bindsym h exec --no-startup-id ~/scripts/bluetooth-headset-connect.sh; mode default
  bindsym h exec --no-startup-id ~/.local/bin/bt-headset-ctl connect; mode default
  #bindsym Shift+h exec --no-startup-id timeout 20 ~/scripts/bluetooth-headset-check.sh; mode default
  bindsym Shift+h exec --no-startup-id echo -e 'disconnect F8:DF:15:8E:9F:51\nquit\n' | bluetoothctl; mode default
  bindsym t exec --no-startup-id ~/scripts/bluetooth-headset-profile-toggle.sh; mode default
  bindsym m exec --no-startup-id echo -e 'connect EA:96:9F:4C:74:A2\nquit' | bluetoothctl; mode default
  bindsym Shift+m exec --no-startup-id ~/.local/bin/bt-headset-ctl move; mode default
  bindsym Escape mode default
  bindsym Return mode default
}

bindsym $mod+Return workspace --no-auto-back-and-forth $wsT; exec i3-sensible-terminal

set $mode_layout "Layout [t]abbed : [|] slpit : [-] split"

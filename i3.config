mode $mode_networking {
  bindsym e exec --no-startup-id sudo netctl start ethernet-dhcp; mode default
  bindsym Shift+e exec --no-startup-id sudo netctl stop ethernet-dhcp; mode default
  bindsym w exec --no-startup-id sudo netctl start wlp2s0-Keenetic-7286; mode default
  bindsym Shift+w exec --no-startup-id sudo netctl stop wlp2s0-Keenetic-7286; mode default
  bindsym Escape mode default
  bindsym Return mode default
} 


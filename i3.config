set $mode_display "Display open [a]bove [b]elow [R]ight [L]eft [c]lone | display [o]ff | move current window [u]p [d]down [l]eft [r]ight"
bindsym $mod+d mode $mode_display
mode $mode_display {
  bindsym a exec --no-startup-id xrandr --output HDMI2 --above eDP1 --preferred; mode default
  bindsym b exec --no-startup-id xrandr --output HDMI2 --below eDP1 --preferred; mode default
  bindsym Shift+r exec --no-startup-id xrandr --output HDMI2 --right-of eDP1 --preferred; mode default
  bindsym Shift+l exec --no-startup-id xrandr --output HDMI2 --left-of eDP1 --preferred; mode default
  bindsym c exec --no-startup-id xrandr --output HDMI2 --same-as eDP1 --preferred; mode default
  bindsym o exec --no-startup-id xrandr --output HDMI2 --off; mode default
  bindsym u move workspace to output up; mode default
  bindsym d move workspace to output down; mode default
  bindsym l move workspace to output left; mode default
  bindsym r move workspace to output right; mode default
  bindsym Escape mode default
  bindsym Return mode default
}

set $mode_networking "Network start [e]thernet, [w]ifi-home | stop [E]thernet [W]ifi-home"
